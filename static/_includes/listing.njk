---
eleventyExcludeFromCollections: true
---
{% include "_header.njk" %}

<h1>{{ title }}</h1>

{{ content | safe }}

{%- set listing_key = listing.key | ref -%}
{%- if listing.collection -%}
  {% set list = collections[ listing.collection ][ listing_key ] %}
{%- else -%}
  {% set list = collections[ listing_key ] %}
{%- endif -%}

{% for post in list | reverse %}
<div>
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <p><small>{{ post.date | strftime("LLL d, y") }}</small></p>
  {{ post.data.summary }}
</div>
{% endfor %}

{% include "_footer.njk" %}
