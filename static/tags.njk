---
layout: layout.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - page
    - post
    - category
    - categories
permalink: /tags/{{ tag | wp_tag_slug }}/
---
<h1>Posts Tagged “{{ tag }}”</h1>

{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
<div>
  {{ post.date | strftime("LLL d, y") }}
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  {{ post.data.summary }}
</div>
{% endfor %}
